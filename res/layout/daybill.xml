<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/daybill_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/count_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="7.0dip"
            android:rotation="180.0"
            android:src="@drawable/right" />

        <TextView
            android:id="@+id/count_title_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="8.0dip"
            android:text="日账单"
            android:textColor="@color/white"
            android:textSize="13.0sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/daybill_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/daybill_linear"></ListView>

    <TextView
        android:id="@+id/daybill_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/daybill_lv"
        android:text="" />
</RelativeLayout>