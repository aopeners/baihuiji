<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.0dip">

        <TextView
            android:id="@+id/home_page_totle_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="今日累计"
            android:textColor="@android:color/black"
            android:textSize="13.0sp" />

        <views.SurfView
            android:id="@+id/home_page_myview"
            android:layout_width="140.0dip"
            android:layout_height="140.0dip"
            android:layout_alignLeft="@id/home_page_totle_tx"
            android:layout_below="@id/home_page_totle_tx" />

        <TextView
            android:id="@+id/home_page_totle_number_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/home_page_myview"
            android:layout_alignTop="@id/home_page_myview"
            android:layout_centerHorizontal="true"
            android:paddingTop="30.0dip"
            android:text="0元"
            android:textColor="@color/orange"
            android:textSize="13.0sp" />
    </RelativeLayout>
</LinearLayout>
