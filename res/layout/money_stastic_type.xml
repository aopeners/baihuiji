<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/loginback"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/moth_bill_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="7.0dip"
            android:rotation="180.0"
            android:src="@drawable/right" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="8.0dip"
            android:text="月详情"
            android:textColor="@android:color/white"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1.0dip"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="16.0sp"
            android:paddingTop="16.0sp"
            android:id="@+id/moth_bill_select_time_linear">

            <TextView
                android:id="@+id/month_bill_year_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="2015年"
                android:textColor="@color/black"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/month_bill_moth_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="11月"
                android:textColor="@color/black"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1.0dip"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="16.0sp"
            android:paddingTop="16.0sp">

            <TextView
                android:id="@+id/month_bill_num_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="总笔数（笔）"
                android:textColor="@color/black"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/month_bill_num1_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1.0dip"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="16.0sp"
            android:paddingTop="16.0sp">

            <TextView
                android:id="@+id/month_bill_get_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已收款（元）"
                android:textColor="@color/black"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/month_bill_get1_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="16.0sp"
            android:paddingTop="16.0sp">

            <TextView
                android:id="@+id/month_bill_back_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已退款"
                android:textColor="@color/black"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/month_bill_back1_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/month_bill_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />
</LinearLayout>
