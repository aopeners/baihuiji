<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/loginback"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">
<!--原返回a-->
        <ImageView
            android:id="@+id/bill_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="7.0dip"
            android:rotation="180.0"
          />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="8.0dip"
            android:text="收款成功"
            android:textColor="@color/white"
            android:textSize="13.0sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="4"
                android:background="@color/loginback"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/success"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="支付成功"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bill_detail_mony_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center"
                    android:padding="8.0dip"
                    android:text="付款金额"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bill_money_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="30.0dip"
                    android:layout_weight="1.0"
                    android:gravity="top|center"
                    android:padding="8.0dip"
                    android:text="¥1532.00"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:text="商户名称"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/bill_detail_marchtName_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:padding="10.0dip"
                    android:text="微客巴巴"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:text="门店名称"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/bill_detail_marchtShop_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:padding="10.0dip"
                    android:text="波波的小店"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:text="探作员"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/bill_detail_operater_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:padding="10.0dip"
                    android:text="001"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:text="支付方式"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/bill_detail_pay_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:padding="10.0dip"
                    android:text="支付宝"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:text="交易单号"

                    android:textColor="@color/black"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/bill_detail_trade_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:padding="10.0dip"
                    android:singleLine="true"
                    android:text="46456fdsafsadfdddddddddddddddddddddddd"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:text="交易时间"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/bill_detail_trade_time_tx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:padding="10.0dip"
                    android:singleLine="true"
                    android:text="2015-12-03"
                    android:textColor="@color/black"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <TextView android:layout_weight="1"
                android:id="@+id/bill_detail_refund_bt_tx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17.0dip"
                android:layout_marginRight="17.0dip"
                android:background="@drawable/buleeblank"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="返回首页"
                android:textColor="@color/white"
                android:textSize="13.0sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
