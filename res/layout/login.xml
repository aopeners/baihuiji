<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/loginback"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/log" />

    <EditText
        android:id="@+id/login_urser_name_etx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.0dip"
        android:layout_marginRight="13.0dip"
        android:hint="请输入正确的账号"
        android:padding="13.0dip"
        android:textColor="@android:color/black"
        android:textSize="13.0sp" />

    <EditText
        android:id="@+id/login_urser_pass_etx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.0dip"
        android:layout_marginRight="13.0dip"
        android:password="true"
        android:hint="请输入正确的密码"
        android:padding="13.0dip"
        android:textColor="@android:color/black"
        android:textSize="13.0sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.0dip"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_cbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:text="记住密码" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_log_tx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="13.0dip"
        android:layout_marginRight="13.0dip"
        android:layout_marginTop="13.0dip"
        android:background="@drawable/buleeblank"
        android:gravity="center_horizontal"
        android:hint="登录"
        android:padding="11.0dip"
        android:textSize="13.0sp" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30.0dip"
        android:text="微客巴巴版权所有"
        android:textSize="10.0dip" />
</LinearLayout>
